<!DOCTYPE html>
<html>
  <head>
    <title>LiquidDiamonds</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  	<% if user_signed_in? %>
  		Hello, <%= current_user.name %> <%= link_to "Sign_out", destroy_user_session_path, :method => 'delete' %>
  	<% else %>
  		<%= link_to "Sign_in", new_user_session_path, method: 'GET' %>
  		<%= link_to "Register", new_user_registration_path, method: 'GET' %>
  	<% end %>
    <%= yield %>
  </body>
</html>
